{
    "model_name": "small",
    "freeze": false,
    "train_config": {
        "use_gpu": 0,
        "optim": "adam",
        "optim_config": {
            "lr": 1e-5
        },
        "batch_size": 16,
        "shuffle": false,
        "epochs": 200,

        "validate": true,
        "do_es": true,
        "patience": 20,
        "es_metric": "val_acc",

        "save_last": true,
        "save_best": true,
        "save_path": "saved/base_small"
    },
    "test_config": {
        "use_gpu": 0,
        "batch_size": 16,
        "save_path": "saved/base_small"
    },
    "log_config": {
        "experiment_name": "vit_v0",
        "loss_log": {
            "method": "epoch",
            "metrics": ["train_loss", "val_loss"],
            "step": 1
        },
        "metric_log": {
            "method": "epoch",
            "metrics": ["train_acc", "train_micro_f1",  "train_macro_f1",
                        "val_acc", "val_micro_f1", "val_macro_f1"],
            "step": 1
        }
    },
    "data": {
        "path": "sldir/scen0/0_1/",
        "imgsz": [64, 192]
    }
}
