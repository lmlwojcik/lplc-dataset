{
    "resnet_weights": "IMAGENET1K_V1",
    "freeze": true,
    "train_config": {
        "use_gpu": -1,
        "freeze": 4,
        "optim_config": {
            "lr": 2e-5,
            "weight_decay": 0
        },
        "batch_size": 16,
        "shuffle": true,
        "epochs": 200,

        "validate": true,
        "patience": 20,
        "es_metric": "val_loss"
    },
    "log_config": {
        "experiment_name": "resnet_v0",
        "loss_log": {
            "method": "epoch",
            "metrics": ["train_loss", "val_loss"],
            "step": 1
        },
        "metric_log": {
            "method": "epoch",
            "metrics": ["train_acc", "train_f1", "val_acc", "val_f1"],
            "step": 1
        }
    },
    "data": {
        "path": "sldir/0_1/",
        "imgsz": [90, 180]
    }
}
