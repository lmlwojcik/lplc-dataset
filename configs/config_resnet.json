{
    "model_name": "resnet",
    "resnet_weights": "IMAGENET1K_V1",
    "freeze": true,
    "train_config": {
        "use_gpu": 0,
        "freeze": 4,
        "optim_config": {
            "lr": 2e-5,
            "weight_decay": 0
        },
        "batch_size": 128,
        "shuffle": true,
        "epochs": 200,

        "validate": true,
        "do_es": true,
        "patience": 20,
        "es_metric": "val_acc",

        "save_last": true,
        "save_best": true,
        "save_path": "saved/resnet"
    },
    "test_config": {
        "use_gpu": 0,
        "batch_size": 32,
        "save_path": "saved/resnet"
    },
    "log_config": {
        "experiment_name": "resnet_v0",
        "loss_log": {
            "method": "epoch",
            "metrics": ["train_loss", "val_loss"],
            "step": 1
        },
        "metric_log": {
            "method": "epoch",
            "metrics": ["train_acc", "train_micro_f1",  "train_macro_f1",
                        "val_acc", "val_micro_f1", "val_macro_f1"],
            "step": 1
        }
    },
    "data": {
        "path": "sldir/0_1/",
        "imgsz": [90, 180]
    }
}
